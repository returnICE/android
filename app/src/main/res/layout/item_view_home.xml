<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/imgHomePhoto"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textHomeSellerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textWhite"
        android:textSize="30sp"
        android:fontFamily="@font/bmhanna"
        tools:text = "SellerName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textHomeServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textWhite"
        android:textSize="20sp"
        android:fontFamily="@font/bmhanna"
        android:layout_marginEnd="20dp"
        tools:text = "service"
        app:layout_constraintRight_toLeftOf="@+id/textHomeUsedTimes"
        app:layout_constraintBottom_toTopOf="@+id/textHomeEndTime" />

    <TextView
        android:id="@+id/textHomeUsedTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textWhite"
        android:textSize="20sp"
        tools:text = "?"
        android:fontFamily="@font/bmhanna"
        app:layout_constraintRight_toLeftOf="@+id/slash"
        app:layout_constraintBottom_toTopOf="@+id/textHomeEndTime" />

    <TextView
        android:id="@+id/textHomeLimitTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textWhite"
        android:textSize="20sp"
        tools:text = "?"
        android:fontFamily="@font/bmhanna"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textHomeEndTime" />

    <TextView
        android:id="@+id/slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textWhite"
        android:textSize="20sp"
        android:fontFamily="@font/bmhanna"
        android:text="/"
        app:layout_constraintRight_toLeftOf="@+id/textHomeLimitTimes"
        app:layout_constraintBottom_toTopOf="@+id/textHomeEndTime" />

    <TextView
        android:id="@+id/textHomeEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textWhite"
        android:textSize="20sp"
        android:fontFamily="@font/bmhanna"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:id="@+id/textB2B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textWhite"
        android:textSize="20sp"
        android:fontFamily="@font/bmhanna"
        tools:text = "B2B"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>